                <td><%= user.cedula %></td>
                <td><%= user.nombres %></td>
                <td><%= user.apellidos %></td>
                <td><%= user.fecha_nacimiento.toISOString().split('T')[0] %></td>
                <td><%= user.correo %></td>
                <td>******</td> <!-- Oculta la contraseña -->
